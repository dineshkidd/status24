{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["./src/*"]
    }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}

